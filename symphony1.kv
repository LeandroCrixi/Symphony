#------------------Scanner Screen---------------------------
<ScannerScreen>:
    id: scanner_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (0.68,0.85,0.90 ,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: bar
        orientation: 'vertical'
        ActionBar:
            ActionView:
                canvas.before:
                    Color:
                        rgba: (0.27,0.51,0.70 ,1)
