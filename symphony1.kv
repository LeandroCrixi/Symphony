<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<Button@Button>:
    background_normal: ''
    background_color:(0.27,0.51,0.70 ,1)

<TextInput@TextInput>:
    multiline: False


<MainManagement>: # Managing all Screens
    LoginScreen:
        name:'login'    # name for LoginScreen
    MenuScreen:
        name:'menu' # name for MenuScreen
#---------------------Menu Sales---------------------------
    SalesScreen:
        name:'sales'    # name for SalesScreen
    ScannerScreen:
        name:'scanner'
    OpenReceipts:
        name: 'openReceipts'
    ReceiptList:
        name: 'receiptList'
#----------------Menu Finances-----------------------------
    FinancesScreen:
        name:'finances'
    PayableScreen:
        name:'payable'
    ReceivableScreen:
        name:'receivable'
#---------------Management Screen--------------------------
    ManagementScreen:
        name:'management'
    CustomerScreen:
        name:'customer'
    ProviderScreen:
        name:'provider'
    ProductScreen:
        name:'product'
#---------------Report Screen------------------------------
    ReportsScreen:
        name:'reports'

#------------------Login Screen---------------------------
<LoginScreen>:  # Login Screen with button, Labels and Text Input
    id: login_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (0.68,0.85,0.90 ,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        padding:180
        spacing:30
        Label:
            text:'LOGO'
        GridLayout:
            cols:2
            spacing: 5
            Label:
                text:'username'
            TextInput:
            Label:
                text:'password'
            TextInput:
        FloatLayout:
            Button:
                text:'Login'
                pos: 330, 210
                size_hint: 0.4, 0.5
                on_release: app.root.current = 'menu'   # changing to 'Menu' Screen

#------------------Main Menu Screen---------------------------
<MenuScreen>:
    id: main_menu_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (0.68,0.85,0.90 ,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: bar
        orientation: 'vertical'
        ActionBar:
            ActionView:
                canvas.before:
                    Color:
                        rgba: (0.27,0.51,0.70 ,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                ActionPrevious:
                    title:'Login'
                    on_release: app.root.current = 'login'
                ActionButton:
                    text: 'X'
                    on_release: app.stop()
        BoxLayout:  # A BoxLayout with different buttons to be transferred to different Screens
            orientation:'vertical'
            padding:100
            spacing:30
            Label:
                text:'MENU'
            Button:
                text:'Sales'
                on_release: app.root.current = 'sales'
            Button:
                text:'Finances'
                on_release: app.root.current = 'finances'
            Button:
                text:'Management'
                on_release: app.root.current = 'management'
            Button:
                text:'Reports'
                on_release: app.root.current = 'reports'


